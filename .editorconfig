root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.cs]
# IDE0055: フォーマット修正 - suggestionレベルに変更（エラー化を回避）
dotnet_diagnostic.IDE0055.severity = suggestion

# CS4014: await演算子の適用を検討 - suggestionレベルに変更
dotnet_diagnostic.CS4014.severity = suggestion

# C#フォーマット規則
csharp_space_after_colon_in_inheritance_clause = true
