<Window x:Class="DocumentFileManager.UI.Windows.ChecklistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFileManager.UI"
        mc:Ignorable="d"
        Title="チェックリスト"
        Height="800" Width="600"
        MinWidth="200"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <Border Grid.Row="0" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <CheckBox x:Name="TopmostCheckBox"
                              Content="常に手前に表示"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              IsChecked="True"
                              Checked="TopmostCheckBox_Checked"
                              Unchecked="TopmostCheckBox_Unchecked"/>
                    <Button x:Name="DockLeftButton"
                            Content="左に配置"
                            Padding="10,5"
                            Margin="0,0,5,0"
                            Click="DockLeftButton_Click"/>
                    <Button x:Name="DockRightButton"
                            Content="右に配置"
                            Padding="10,5"
                            Margin="0,0,5,0"
                            Click="DockRightButton_Click"/>
                    <Button x:Name="AddItemButton"
                            Content="&#x2795; 項目追加"
                            Padding="10,5"
                            Margin="5,0,0,0"
                            Click="AddItemButton_Click"
                            ToolTip="チェック項目を追加"/>
                </StackPanel>

                <!-- 閉じるボタン（右端に固定、他より大きく） -->
                <Button x:Name="CloseButton"
                        Grid.Column="1"
                        Content="&#x2716; 閉じる"
                        Padding="15,8"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        ToolTip="チェックリストを閉じる"/>
            </Grid>
        </Border>

        <!-- チェック項目表示エリア -->
        <ScrollViewer Grid.Row="1"
                      Margin="5"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
            <WrapPanel x:Name="CheckItemsContainer"
                       Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</Window>
