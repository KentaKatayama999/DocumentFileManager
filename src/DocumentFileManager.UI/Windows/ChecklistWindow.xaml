<Window x:Class="DocumentFileManager.UI.Windows.ChecklistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFileManager.UI"
        mc:Ignorable="d"
        Title="チェックリスト"
        Height="800" Width="600"
        MinWidth="200"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <Border Grid.Row="0" Background="#34495E" Padding="10">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="TopmostCheckBox"
                          Content="常に手前に表示"
                          Foreground="White"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          IsChecked="True"
                          Checked="TopmostCheckBox_Checked"
                          Unchecked="TopmostCheckBox_Unchecked"/>
                <Button x:Name="DockLeftButton"
                        Content="左に配置"
                        Padding="10,5"
                        Margin="0,0,5,0"
                        Click="DockLeftButton_Click"/>
                <Button x:Name="DockRightButton"
                        Content="右に配置"
                        Padding="10,5"
                        Margin="0,0,5,0"
                        Click="DockRightButton_Click"/>
                <Button x:Name="CaptureButton"
                        Content="📸 キャプチャ"
                        Padding="10,5"
                        Click="CaptureButton_Click"
                        ToolTip="アクティブウィンドウをキャプチャして保存"/>
                <Button x:Name="AddItemButton"
                        Content="➕ 項目追加"
                        Padding="10,5"
                        Margin="5,0,0,0"
                        Click="AddItemButton_Click"
                        ToolTip="チェック項目を追加"/>
                <Button x:Name="CreateNewChecklistButton"
                        Content="📝 新規作成"
                        Padding="10,5"
                        Margin="5,0,0,0"
                        Click="CreateNewChecklistButton_Click"
                        ToolTip="新しいチェックリストファイルを作成"/>
            </StackPanel>
        </Border>

        <!-- チェック項目表示エリア -->
        <ScrollViewer Grid.Row="1"
                      Margin="5"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="VerticalOnly">
            <WrapPanel x:Name="CheckItemsContainer"
                       Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</Window>
