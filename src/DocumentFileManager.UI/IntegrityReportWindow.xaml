<Window x:Class="DocumentFileManager.UI.IntegrityReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="データ整合性チェック結果"
        Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- サマリー表示 -->
        <Border Grid.Row="0" Background="#ECF0F1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="SummaryText"
                           FontSize="14"
                           FontWeight="Bold"
                           Text="チェック中..."/>
                <TextBlock x:Name="DetailText"
                           FontSize="12"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- 詳細ログ -->
        <GroupBox Grid.Row="1" Header="詳細ログ" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="#FAFAFA"
                         BorderThickness="0"
                         Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- 修復オプション -->
        <GroupBox Grid.Row="2" Header="修復オプション" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="DeleteMissingCheckBox"
                          Content="存在しない資料ファイルのDBレコードを削除"
                          IsChecked="True"
                          Margin="0,0,0,5"/>
                <CheckBox x:Name="DeleteOrphanedCapturesCheckBox"
                          Content="孤立したキャプチャ画像を削除"
                          IsChecked="True"
                          Margin="0,0,0,5"/>
                <TextBlock Text="※ 修復は慎重に行ってください。元に戻すことはできません。"
                           Foreground="Red"
                           FontSize="11"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RepairButton"
                    Content="修復実行"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Click="RepairButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="CloseButton"
                    Content="閉じる"
                    Padding="15,8"
                    Click="CloseButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
