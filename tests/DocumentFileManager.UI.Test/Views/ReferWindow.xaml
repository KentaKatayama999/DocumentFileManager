<Window x:Class="DocumentFileManager.UI.Test.Views.ReferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="資料保存アプリ - 資料一覧" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトルバー -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <TextBlock Text="資料一覧"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- ツールバー -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="ファイル追加"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBox x:Name="SearchBox"
                         Width="300"
                         Padding="8"
                         VerticalContentAlignment="Center"
                         Margin="10,0,0,0"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="🔍"
                           VerticalAlignment="Center"
                           Margin="-25,0,0,0"
                           Foreground="#7F8C8D"
                           IsHitTestVisible="False"/>
            </StackPanel>
        </Border>

        <!-- 資料リスト -->
        <ListView Grid.Row="2"
                  x:Name="DocumentListView"
                  Margin="10"
                  BorderBrush="#BDC3C7"
                  BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="種類" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="📄" FontSize="20" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="ファイル名" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileName}"
                                          FontWeight="Medium"
                                          Foreground="#2C3E50"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="パス" Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FullPath}"
                                          Foreground="#7F8C8D"
                                          TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <!-- サンプルデータ -->
            <ListViewItem>
                <ListViewItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="📄" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="設計書_rev1.pdf" FontWeight="Medium" Foreground="#2C3E50"/>
                        <TextBlock Grid.Column="2" Text="C:\Documents\設計書_rev1.pdf" Foreground="#7F8C8D"/>
                    </Grid>
                </ListViewItem.Content>
            </ListViewItem>

            <ListViewItem>
                <ListViewItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="500"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="📄" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="仕様書_final.docx" FontWeight="Medium" Foreground="#2C3E50"/>
                        <TextBlock Grid.Column="2" Text="C:\Documents\仕様書_final.docx" Foreground="#7F8C8D"/>
                    </Grid>
                </ListViewItem.Content>
            </ListViewItem>
        </ListView>

        <!-- ステータスバー -->
        <Border Grid.Row="3" Background="#ECF0F1" Padding="10,8" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText"
                       Text="資料: 2件"
                       Foreground="#7F8C8D"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
